        {{ wp_get_attachment_image(fields.image.ID, 'medium', { class: 'gPerson__img' }) }}
    </div>
    <div class="gPerson__text">
        <h4 class="gPerson__name">{{ fields.name }}</h4>
        <div class="gPerson__content">{{ fields.content }}</div>
