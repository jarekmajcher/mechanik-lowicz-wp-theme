            <div class="gPerson__linkedin">
                <a class="gPerson__linkedinLink" href="{{ fields.linkedin }}" target="_blank" rel="noreferrer noopener"><i class="fa-brands fa-linkedin"></i> <span>{{ __('zobacz wiÄ™cej na LinkedIn', 'wygrywajacezespoly') }}</span></a>
            </div>
        {% endif %}
